<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PromptDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:background">#00000000</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowMinWidthMajor">100.0%</item>
        <item name="android:windowMinWidthMinor">100.0%</item>
        <item name="android:windowSwipeToDismiss">true</item>
    </style>
    <style name="HMProgressBar" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progress_medium_material</item>
    </style>
    <style name="HMProgressBar.Large" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:indeterminateDrawable">@drawable/progress_large_material</item>
    </style>
    <style name="HMProgressBar.Small" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@drawable/progress_small_material</item>
    </style>
    <style name="AppBaseTheme" parent="@android:style/Theme.Black.NoTitleBar.Fullscreen" />
    <style name="AppTheme" parent="@android:style/Theme.Black.NoTitleBar.Fullscreen">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowSwipeToDismiss">true</item>
    </style>
    <style name="HmDialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="HmDialogTopHalfBackground">
        <item name="android:background">#ff137dca</item>
    </style>
    <style name="HmDialogBottomHalfBackground">
        <item name="android:background">#ffffffff</item>
    </style>
    <style name="HmDialogText">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="NoSwipeDismissDialog" parent="@android:style/Theme.DeviceDefault.Dialog.Alert">
        <item name="android:windowSwipeToDismiss">true</item>
    </style>
    <style name="SwipeDismissDialog" parent="@android:style/Theme.DeviceDefault.Dialog.Alert">
        <item name="android:windowSwipeToDismiss">true</item>
    </style>
    <style name="NoSwipeDialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowSwipeToDismiss">false</item>
    </style>
    <style name="NoSwipeActivity" parent="@android:style/Theme.Black.NoTitleBar.Fullscreen">
        <item name="android:windowSwipeToDismiss">false</item>
    </style>
</resources>
